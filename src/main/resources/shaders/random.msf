// TausLCG

uint TausStep(uint z, int S1, int S2, int S3, uint M)
{
    uint b = (((z << S1) ^ z) >> S2);
    return (((z & M) << S3) ^ b);
}

uint LCGStep(uint z, uint A, uint C)
{
    return (A * z + C);
}

float nextTausLCG(inout uvec4 state)
{
    state = uvec4(
		TausStep(state.x, 13, 19, 12, 4294967294u),
		TausStep(state.y, 2, 25, 4, 4294967288u),
		TausStep(state.z, 3, 11, 17, 4294967280u),
		LCGStep(state.w, 1664525, 1013904223u)
	);

    return 2.3283064365387e-10 * float(state.x ^ state.y ^ state.z ^ state.w);
}
